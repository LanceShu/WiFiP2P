<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lance.wifip2p.View.MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/file_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:padding="@dimen/padding_size_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/send_bt"
            android:layout_width="@dimen/button_size_1"
            android:layout_height="@dimen/button_size_2"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/padding_size_2"
            android:layout_alignParentStart="true"
            android:text="send"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/receive_bt"
            android:layout_width="@dimen/button_size_1"
            android:layout_height="@dimen/button_size_2"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/padding_size_2"
            android:layout_alignParentEnd="true"
            android:text="receive"
            android:textSize="18sp"/>

    </RelativeLayout>
</LinearLayout>
